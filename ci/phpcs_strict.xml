<?xml version="1.0"?>
<ruleset name="OpenEMR Standard">
  <description>PSR2</description>
  <arg name="tab-width" value="4" />
  <!-- PHP code MUST use only UTF-8 without BOM. -->
  <rule ref="PSR2" />

  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/gacl/*</exclude-pattern>
  <exclude-pattern>*/bower_components/*</exclude-pattern>
  <exclude-pattern>*/node_modules/*</exclude-pattern>
  <exclude-pattern>*/public/assets/*</exclude-pattern>
  <exclude-pattern>*/Documentation/*</exclude-pattern>
  <exclude-pattern>*/tests/*</exclude-pattern>
  <exclude-pattern>*/images/*</exclude-pattern>
  <exclude-pattern>*/library/html2pdf/*</exclude-pattern>
  <exclude-pattern>*/library/classes/fpdf/*</exclude-pattern>
  <exclude-pattern>*/library/classes/smtp/*</exclude-pattern>
  <exclude-pattern>*/library/classes/PDF_Label.php</exclude-pattern>
  <exclude-pattern>*/library/custom_template/*</exclude-pattern>
  <exclude-pattern>*/library/fonts/*</exclude-pattern>
</ruleset>
